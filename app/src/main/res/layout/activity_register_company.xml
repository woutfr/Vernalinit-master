<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/loginbackground"
        tools:context=".Registercompany">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:text="@string/registercompany_introtext"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/companyregister_text"
                    app:layout_constraintStart_toStartOf="@+id/Company"
                    app:layout_constraintEnd_toEndOf="@+id/Company"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textStyle="bold"
                    android:textSize="32sp"
                    android:textColor="@color/LogoColor"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:inputType="textPersonName"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/Company"
                    android:hint="@string/company_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintTop_toBottomOf="@+id/companyregister_text"
                    android:autofillHints="Company"
                    tools:ignore="UnusedAttribute"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/text_input_password"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/Company"
                    app:layout_constraintStart_toStartOf="@+id/Company"
                    app:layout_constraintEnd_toEndOf="@+id/Company"
                    android:hint="@string/password"
                    android:autofillHints="123"
                    tools:ignore="UnusedAttribute"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:id="@+id/BTW"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="@+id/text_input_password"
                    app:layout_constraintStart_toStartOf="@+id/text_input_password"
                    app:layout_constraintTop_toBottomOf="@+id/text_input_password"
                    android:hint="@string/btw_number"
                    android:autofillHints="123456"
                    tools:ignore="UnusedAttribute"/>
            <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:hint="@string/e_mail_address"
                    android:layout_gravity="center_horizontal"
                    app:layout_constraintEnd_toEndOf="@+id/BTW"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/BTW"
                    app:layout_constraintStart_toStartOf="@+id/BTW"
                    android:autofillHints="Company@hotmail.com"
                    tools:ignore="UnusedAttribute"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:id="@+id/phone"
                    android:layout_gravity="center_horizontal"
                    app:layout_constraintStart_toStartOf="@+id/email"
                    app:layout_constraintEnd_toEndOf="@+id/email"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/email"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:hint="@string/phone_number"
                    android:autofillHints="+31"
                    tools:ignore="UnusedAttribute"/>
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/spinner"
                    android:autofillHints="Select your City"
                    app:layout_constraintStart_toStartOf="@+id/phone"
                    app:layout_constraintTop_toBottomOf="@+id/phone"
                    app:layout_constraintEnd_toEndOf="@+id/phone"
                    tools:targetApi="o"/>
            <TextView
                    android:text="@string/register_company_TC_text"
                    android:layout_width="233dp"
                    android:layout_height="58dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/TandC"
                    app:layout_constraintStart_toStartOf="@+id/spinner"
                    app:layout_constraintTop_toBottomOf="@+id/spinner"
                    app:layout_constraintEnd_toEndOf="@+id/spinner"
                    android:textSize="14sp"/>
            <CheckBox
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox"
                    android:layout_gravity="end"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="-40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:padding="10dp"
                    app:layout_constraintTop_toTopOf="@+id/TandC"
                    app:layout_constraintBottom_toBottomOf="@+id/TandC"
                    app:layout_constraintStart_toEndOf="@+id/TandC"/>
            <Button
                    android:text="@string/submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:onClick="registerBack"
                    android:background="@drawable/hoverbutton"
                    android:id="@+id/Submit_register_company"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:layout_editor_absoluteX="162dp"
                    app:layout_constraintTop_toBottomOf="@+id/TandC"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_marginTop="20dp"/>

            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/logowithtext"
                    android:id="@+id/logo_register_company"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/Submit_register_company"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/TandC"
                    app:layout_constraintEnd_toEndOf="@+id/TandC"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/logo_with_text_company"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
